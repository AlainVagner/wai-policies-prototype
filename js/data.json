---
layout: null
---
[{% for policy in site.policies %}{% if forloop.last == true %}{% assign outerlast = true %}{% endif %}{% for p in policy.policies %}
{
    "title": "{{policy.country.en}}",
    "countryhref": "{{ policy.url |  prepend: site.baseurl }}",
    "policyname": "{{p.title.en}}",
    "policyhref": "{{ policy.url | prepend: site.baseurl }}#{{ p.title.en | slugify }}",
    "title": "{{policy.country.en}}",
    "url": "{{p.url}}",
    "enactdate": "{{p.enactdate}}",
    "type": "{{p.type}}",
    "scope": [
      {% assign scopes = p.scope | split: ", " %}{% for scope in scopes %}"{{scope}}"{% unless forloop.last %},{% endunless %}{% endfor %}
    ],
    "webonly": "{%if p.webonly == true %}yes{% else %}no{%endif%}",
    "wcagver": "{{p.wcagver}}"
  }{% unless outerlast == true and forloop.last == true %},{% endunless %}{% endfor %}{% endfor %}
]
